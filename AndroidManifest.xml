        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="transponders.transmob.NearbyStops"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDbo0rtYTIVbsxnrd4xEYOPXbO73bL0z3Y" />

        <activity
            android:name="transponders.transmob.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="transponders.transmob.NearbyStops" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="transponders.transmob.NearbyStops" />
        </activity>
    </application>

</manifest>